<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fon"
    tools:context=".ui.screens.QuizScreen">


    <TextView
        android:background="@color/colorGradientCenter"
        android:textColor="@color/white"
        android:id="@+id/level_text_quiz"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:gravity="start|center"
        android:paddingStart="16dp"
        android:text="Level:1/10"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:background="#C3122A93"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/score_txt_quiz"
        android:layout_width="0dp"
        android:layout_height="?actionBarSize"
        android:gravity="center"
        android:text="Correct:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/level_text_quiz" />


    <ImageView
        android:id="@+id/image_quiz"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/uz"
        app:layout_constraintBottom_toTopOf="@id/varinats_c"
        app:layout_constraintTop_toBottomOf="@id/score_txt_quiz"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintVertical_chainStyle="packed"
        tools:layout_editor_absoluteX="30dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/varinats_c"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintEnd_toEndOf="@id/image_quiz"
        app:layout_constraintStart_toStartOf="@id/image_quiz"
        app:layout_constraintTop_toBottomOf="@id/image_quiz"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/a_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/dp_5"
            android:background="@drawable/bg_button_varinat"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:paddingVertical="16dp"
            android:text="Afrika"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/c_btn"
            app:layout_constraintEnd_toStartOf="@id/b_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:background="@drawable/bg_button_varinat"
            android:layout_margin="@dimen/dp_5"
            android:id="@+id/b_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:paddingVertical="16dp"
            android:text="Afrika"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/d_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/a_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:background="@drawable/bg_button_varinat"
            android:layout_margin="@dimen/dp_5"
            android:id="@+id/c_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:paddingVertical="16dp"
            android:text="Afrika"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/d_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/a_btn" />

        <TextView
            android:background="@drawable/bg_button_varinat"
            android:layout_margin="@dimen/dp_5"
            android:id="@+id/d_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:paddingVertical="16dp"
            android:text="Afrika"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/c_btn"
            app:layout_constraintTop_toBottomOf="@id/b_btn" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>